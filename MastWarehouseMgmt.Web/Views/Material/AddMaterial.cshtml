@model MaterialHistoryViewModel

<form class="row pt-5 justify-content-lg-around" asp-action="AddMaterial" method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">Дата</label>
        <input type="date" class="form-control" asp-for="CreatedDate">
        <span asp-validation-for="CreatedDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Вид сыря</label>
        <select class="custom-select" asp-for="MaterialId" asp-items="ViewBag.Materials">
            <option selected disabled value="">Выбрать</option>
        </select>
        <span asp-validation-for="MaterialId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Количество</label>
        <input type="number" class="form-control" asp-for="Quantity">
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="row form-group justify-content-center mt-3" style="width: 100%;">
        <button type="submit" class="btn btn-success mr-5">Добавить</button>
        <button asp-action="Material" class="btn btn-danger">Отмена</button>
    </div>
</form>
